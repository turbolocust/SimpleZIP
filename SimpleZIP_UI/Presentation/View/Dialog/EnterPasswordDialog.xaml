<ContentDialog
    x:Uid="EnterPasswordDialog"
    x:Class="SimpleZIP_UI.Presentation.View.Dialog.EnterPasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d"
    Title=""
    PrimaryButtonText="OK"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <PasswordBox x:Uid="EnterPassword" Grid.Row="0" Header="{Binding FileName}" 
                     Password="{Binding Password, Mode=TwoWay}" PasswordRevealMode="Peek" />
    </Grid>
</ContentDialog>
